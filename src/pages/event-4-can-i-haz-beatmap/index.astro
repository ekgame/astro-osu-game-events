---
import Layout from "../../layouts/Layout.astro";
import Title from "../../components/Title.astro";
import Timeline from "../../components/Timeline.astro";
import TimelineItem from "../../components/TimelineItem.astro";
import Event4JudgementTable from "../../components/Event4JudgementTable.astro";

import { Image } from "astro:assets";
import banner from "./banner.png";

import { parse as parseCsv } from "csv-parse/sync";
import grading1Csv from "./grading1.csv?raw";
import grading2Csv from "./grading2.csv?raw";
import grading3Csv from "./grading3.csv?raw";

const grading1 = parseCsv(grading1Csv, {
    columns: true,
});

const grading2 = parseCsv(grading2Csv, {
    columns: true,
});

const grading3 = parseCsv(grading3Csv, {
    columns: true,
});

function getGradingArray(map_no: number) {
    const map_index = map_no - 1;
    return [
        [
            grading1[map_index].song_representation,
            grading2[map_index].song_representation,
            grading3[map_index].song_representation,
        ].map(parseFloat),
        [
            grading1[map_index].map_consistency,
            grading2[map_index].map_consistency,
            grading3[map_index].map_consistency,
        ].map(parseFloat),
        [
            grading1[map_index].pattern_creativity,
            grading2[map_index].pattern_creativity,
            grading3[map_index].pattern_creativity,
        ].map(parseFloat),
        [
            grading1[map_index].general_quality,
            grading2[map_index].general_quality,
            grading3[map_index].general_quality,
        ].map(parseFloat),
        [
            grading1[map_index].era_representation,
            grading2[map_index].era_representation,
            grading3[map_index].era_representation,
        ].map(parseFloat),
        [
            grading1[map_index].modernization,
            grading2[map_index].modernization,
            grading3[map_index].modernization,
        ].map(parseFloat),
    ];
}
